pipeline 
{
    agent { label 'raspi-5' }
    
    stages 
    {
        stage('info')
        {
            steps 
            {
                echo 'Running on Raspi 5 agent'
                sh 'hostname && pwd && ls'
            }
        }
        stage('build') 
        {
            steps 
            {
                echo 'Build stage: compile all code and build an executable (native in the Raspi 5)' 
                dir('file_service') 
                {
                    sh 'mkdir -p build && cd build && cmake .. && make'
                }
            }
        }
        stage('test') 
        {
            steps 
            {
                echo 'Test stage: run the test cases (native in the Raspi 5)' 
                dir('file_service/build') 
                {
               	    sh './test/test'
                }
            }
        }
    }
    post 
    {
        success 
        {
            echo 'Archive build artifacts'
            archiveArtifacts artifacts: 'file_service/build/test/test', fingerprint: true
        }
    }
}
